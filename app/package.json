{
  "license": "MIT",
  "engineStrict": true,
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "migrate": "knex migrate:latest --knexfile ./src/db/config.js",
    "test": "jest --config test.json --forceExit",
    "clear": "rimraf build coverage && mkdir build",
    "compile": "babel src --quiet --out-dir build --ignore '**/*.spec.js'",
    "pack": "yarn run clear && eslint . && yarn run compile",
    "format": "prettier-eslint 'src/**/*.js'",
    "start": "node build/src/index.js",
    "dev": "babel-watch -L src/index.js --ignore '**/*.spec.js'"
  },
  "dependencies": {
    "bookshelf": "^0.10.4",
    "joi": "^10.6.0",
    "knex": "^0.13.0",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.2.1",
    "pg": "^7.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-watch": "^2.0.7",
    "eslint": "^4.6.0",
    "eslint-plugin-prettier": "^2.2.0",
    "jest": "^20.0.4",
    "nodemon": "^1.11.0",
    "prettier": "^1.6.1",
    "prettier-eslint-cli": "^4.3.0",
    "pretty-error": "^2.1.1",
    "rimraf": "^2.6.1"
  }
}
